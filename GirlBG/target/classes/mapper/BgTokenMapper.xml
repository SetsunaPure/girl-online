<mapper namespace="com.girl.core.mapper.BgTokenMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.girl.core.entity.BgToken">
        <id column="token" property="token" />
        <result column="login_id" property="loginId" />
        <result column="create_time" property="createTime" />
        <result column="expiry_time" property="expiryTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        token, login_id AS loginId, create_time AS createTime, expiry_time AS expiryTime
    </sql>

</mapper>
