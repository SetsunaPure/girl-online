<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.girl.core.mapper.UserCertInfoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.girl.core.entity.UserCertInfo">
        <id column="id" property="id" />
        <result column="uid" property="uid" />
        <result column="video_url" property="videoUrl" />
        <result column="status" property="status" />
        <result column="oper_msg" property="operMsg" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, uid, video_url AS videoUrl, status, oper_msg AS operMsg
    </sql>

    <select id="getCertInfo" resultType="com.girl.Common.model.CertInfo">
      SELECT
        cert.id as id,
        cert.uid as userid,
		info.nick_name as nickname,
        cert.video_url as video
      FROM
        user_cert_info cert
      LEFT JOIN
        user_info info
      ON
        cert.uid = info.id
      WHERE
        cert.status = #{status}
      ORDER BY
        cert.uid
    </select>
</mapper>
